extends _layout
block content
	section.portfolio-page__wrapper.cf#portfolio-list
		.protfolio-menu__wrapper
			.main-menu__inner.portfolio-page__menu.cf
				.main-menu__control
					a.main-menu__close(href="#")
						span
						span
						span
				a(href="/")
					img.menu__logo(src="img/menu-logo.png", alt="")
				nav.main__nav
					a.main__nav-item(href="/#services") Services
					a.main__nav-item(href="#") portfolio
					a.main__nav-item(href="/#about") About Us
					a.main__nav-item(href="/#team") Team
					a.main__nav-item(href="/#contacts") Contact us
		.portfolio-page__content
			.portfolio-page__item(v-for="(portfolioItem, index) in portfolioItems")
				a.full-link(:href="'/item.html#'+index" target="_blank")
				img.portfolio-page__item--thumb(:src="portfolioItem.thumb", :alt="portfolioItem.title")
				.portfolio-page__item--content
					p.portfolio-page__item--title {{portfolioItem.title}}
					p.portfolio-page__item--tags {{portfolioItem.shortTags}}
					span.btn.btn--colored View
	section.footer.cf
		ul.social.cf
			li.social-item.fb
				a(href="https://www.facebook.com/BelugaLabs/" target="_blank")
